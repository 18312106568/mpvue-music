
.singer-detail .singer-info {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.singer-detail .singer-info .name {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #df840d;
  z-index: 2;
}
.singer-detail .singer-info .photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  z-index: -1;
}
.singer-detail .singer-info .photo ._img {
  width: 100%;
}
.singer-detail .singer-info .blur {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  background: rgba(0,0,0,0.4);
  z-index: 1;
}
.singer-detail .song-wrapper {
  position: absolute;
  top: 450rpx;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: -2;
}
.singer-detail .song-wrapper .song {
  padding: 30rpx;
  border-bottom: 2rpx solid #fafafa;
}
.singer-detail .song-wrapper .song .song-name {
  font-size: 30rpx;
  margin-bottom: 15rpx;
  color: #000;
}
.singer-detail .song-wrapper .song .singer-name {
  font-size: 30rpx;
  color: #999;
}